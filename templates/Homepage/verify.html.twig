{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="article">
            {% if signature is not null %}
                <h1>
                    Ďakujeme{% if was_verified_5_minutes_ago %} {{ signature.firstName }} {{ signature.lastName }}{% endif %}!
                </h1>
                <h2>
                    Váš podpis bol overený a pridali ste sa medzi podporovateľov výzvy.
                </h2>
            {% else %}

                <h1>
                    Ďakujeme{% if was_verified_5_minutes_ago %}{{ signature.firstName }} {{ signature.lastName }}{% endif %}!
                </h1>
            {% endif %}

            <p style="margin-top: 50px;">
                <a href="/">Naspäť na text výzvy</a>
            </p>
        </div>
    </div>
{% endblock %}